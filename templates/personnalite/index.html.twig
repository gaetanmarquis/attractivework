{% extends 'base.html.twig' %}

{% block title %}Hello PersonnaliteController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>

        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Reference</th>
            <th>Catégorie</th>
            <th>Description</th>
            <th>Options</th>
        </tr>
        </thead>

        <tbody>
        {% for personnalite in personnalites %}
         <tr>
            <td>{{ personnalite.id }}</td>
            <td>{{ personnalite.nom }}</td>
            <td>{{ personnalite.reference }}</td>
            <td>{{ personnalite.categorie }}</td>
            <td>{{ personnalite.description }}</td>
            <td>
                    <a href="{{ path('personnalite_edit', { 'id' : personnalite.id }) }}"><i class="fas fa-pen"></i></a>
                    <a href="{{ path('personnalite_delete', { 'id' : personnalite.id }) }}"><i class="fas fa-trash-alt"></i></a>
                </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('personnalite_add', { 'id' : personnalite.id }) }}"><button type="button" class="btn btn-info">Ajouter une personnalité</button></a>
{% endblock %}
