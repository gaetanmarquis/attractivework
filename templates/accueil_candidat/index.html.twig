{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('css/stylefrontcandidat.css') }}" rel="stylesheet">"
{% endblock %}

{% block title %}Hello AccueilCandidatController!{% endblock %}

{% block body %}
	{% include 'navbar_candidat/index.html.twig' %}

	<!--Début Candidat Card-->
	<div class="row">
		<div class="col-lg-12">
			<div class="card mt-5 recruteur-top">
				<div class="card-body">
						<div class="card border-0 mx-auto" style="width: 18rem;">
							<img src="{{ app.user.photoProfil }}"
								 class="card-img-top img-responsive rounded-circle border border-primary mt-2  pt-1 pb-1 pr-1 pl-1 mx-auto"
								 alt="...">
							<div class="card-body">
								<h5 class="card-title text-center">{{ app.user.nom }} {{ app.user.prenom }}</h5>
								<h6 class="card-title text-center font-weight-light text-black-50">{{ app.user.ville }}
									,{{ app.user.pays }}</h6>
								<p class="card-text text-center">This is a longer card with supporting text below as a
									natural lead-in
									to
									additional content. This content is a little bit longer.</p>
								<button type="button"
										class="btn btn-lg rounded-pill pl-lg-5 pr-lg-5 col px-md-5 font-weight-bolder">
									Suivre
								</button>
							</div>
						</div>
				</div>

				{# DébutZone Abonnements#}
				<ul class="list-group list-group-horizontal-lg border-0 pb-4">
					<li class="list-group-item d-flex justify-content-between align-items-center border-0 mx-auto font-weight-bold">
						Abonnés:
						<span class="badge badge-pill ml-2 font-weight-bolder">400</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center border-0 mx-auto font-weight-bold">
						Abonnements:
						<span class="badge badge-pill ml-2 font-weight-bolder">100</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center border-0 mx-auto font-weight-bold">
						J'aime:
						<span class="badge badge-pill ml-2 font-weight-bolder">50</span>
					</li>
				</ul>
				{# Fin zone Abonnement#}
			</div>
		</div>
	</div>
	<!--Fin Candidat Card-->




	<!-- Section Candidat  -->
	<section class="page-section candidat" id="candidat">
		<div class="container">

			<!--  Section Candidat  Heading -->
			<h2 class="page-section-heading text-center display-3 font-weight-bolder mb-0 text-candidat pb-2"><img
						src="{{ asset('image/icon_Recru.png') }}" alt="iconerecruteur"> &#8226; Recruteurs </h2>

			<hr>

			<!-- Début cards section -->
			<div class="container pt-2" style="background-color: #f9f9f9;">
				<div class="card-deck">
					{% for recruteur in recruteurs %}
					<div class="card">
						
						<a href="{{ path('profil_details_recruteur', { 'id' : recruteur[0].id, 'role' : 'candidat'}) }}"><img src="{{ recruteur[0].membre.photoProfil }}"
							 class="card-img-top img-responsive rounded-circle border border-danger mt-2  pt-1 pb-1 pr-1 pl-1 mx-auto"
							 alt="..."></a>
						<div class="card-body">
							<h5 class="card-title text-center">{{recruteur[0].membre.nom }} {{ recruteur[0].membre.prenom }}</h5>
							<h6 class="card-title text-center font-weight-light text-black-50">{{ recruteur[0].membre.ville }}
								,{{ recruteur[0].membre.pays }}</h6>
							<p class="card-text text-center">This is a longer card with supporting text below as a
								natural
								lead-in to
								additional content. This content is a little bit longer.</p>
							<p>
								<a role="button" href="{{ path('select_recruteur', {id: recruteur[0].id}) }}">
									<i class="fas fa-plus-square fa-2x"></i>
								</a>
							</p>
						</div>
					</div>
					{% endfor %}

				<!-- Fin cards section-->

				<hr>

				</div> <!-- /container -->
			</div>
		</div>
	</section>


	<!-- Footer -->

{% endblock %}

