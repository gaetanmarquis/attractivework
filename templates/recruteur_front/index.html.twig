{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/stylefrontrecruteur.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}Hello RecruteurFrontController!{% endblock %}

{% block body %}
    {% include 'navbar_candidat/index.html.twig' %}
    <style>
        .bdPhotoC{
            border: 2px solid #a2ddf7;
        }

        .bdPhotoR{
            border: 2px solid #b13f9a;
        }
    </style>
    <body id="page-top">

    <!--Début Recruteur Card-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card mt-5 recruteur-top">
                <div class="card-body">
                    <div class="card border-0 mx-auto" style="width: 18rem;">
                        <img src="{{ app.user.photoProfil }}"
                             class="card-img-top img-responsive rounded-circle bdPhotoR mt-2  pt-1 pb-1 pr-1 pl-1 mx-auto"
                             alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">{{ app.user.nom }} {{ app.user.prenom }}</h5>
                            <h6 class="card-title text-center font-weight-light text-black-50">{{ app.user.ville }}
                                ,{{ app.user.pays }}</h6>
                            <p class="card-text text-center">This is a longer card with supporting text below as a
                                natural lead-in
                                to
                                additional content. This content is a little bit longer.</p>
                            <button type="button"
                                    class="btn btn-lg rounded-pill pl-lg-5 pr-lg-5 col px-md-5 font-weight-bolder text-white">
                                Suivre
                            </button>
                        </div>
                    </div>
                </div>

                {# DébutZone Abonnements#}
                <ul class="list-group list-group-horizontal-lg border-0 pb-4 ">
                    <li class="list-group-item d-flex border-0 font-weight-bold mx-auto">
                        Abonnés:
                        <span class="badge badge-pill ml-2 font-weight-bolder text-white">400</span>
                    </li>
                    <li class="list-group-item d-flex border-0 font-weight-bold mx-auto">
                        Abonnements:
                        <span class="badge badge-pill ml-2 font-weight-bolder text-white">100</span>
                    </li>
                    <li class="list-group-item d-flex border-0 font-weight-bold mx-auto">
                        J'aime:
                        <span class="badge badge-pill ml-2 font-weight-bolder text-white ">50</span>
                    </li>
                </ul>
                {# Fin zone Abonnement#}
            </div>
        </div>
    </div>
    <!--Fin Recruteur Card-->


    <!-- Section Candidat  -->
    <section class="page-section candidat" id="candidat">
        <div class="container">

            <!--  Section Candidat  Heading -->
            <h2 class="page-section-heading text-center display-3 font-weight-bolder mb-0 text-recruteur pb-2"><img
                        src="{{ asset('image/icon_card.png') }}" alt="iconerecruteur"> &#8226; Candidats </h2>

            <hr>

            <!-- Début cards section -->
            <div class="container pt-2" style="background-color: #f9f9f9;">
                <div class="card-deck">
                    {% for candidat in candidats %}
                        <div class="card">
                            <img src="{{ app.user.photoProfil }}"
                                 class="card-img-top img-responsive rounded-circle bdPhotoC mt-2  pt-1 pb-1 pr-1 pl-1 mx-auto"
                                 alt="...">
                            <div class="card-body">
                                <h5 class="card-title text-center">{{ candidat[0].membre.nom }} {{ candidat[0].membre.prenom }}</h5>
                                <h6 class="card-title text-center font-weight-light text-black-50">{{ candidat[0].metier }}
                                    , {{ candidat[0].membre.ville }}
                                    ,{{ candidat[0].membre.pays }}</h6>
                                <p class="card-text text-center">This is a longer card with supporting text below as a
                                    natural
                                    lead-in to
                                    additional content. This content is a little bit longer.</p>
                                <p><a href="{{ path('select_candidat', {id: candidat[0].id}) }}" role="button"><i class="fas fa-plus-square fa-2x"></i></a></p>
                            </div>
                        </div>
                    {% endfor %}
                    <!-- Fin cards section-->

                    <hr>

                </div> <!-- /container -->
            </div>
        </div> <!-- /container -->
    </section>



    <!-- Footer -->

{% endblock %}
