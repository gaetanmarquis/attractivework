{% extends 'base.html.twig' %}

{% block title %}Hello MembreController!{% endblock %}

{% block body %}
    <div class="container">
    {{ form_start(membre_form) }}
        <div class="form-group">
            {{ form_label(membre_form.nom) }}
            {{ form_widget(membre_form.nom, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.prenom) }}
            {{ form_widget(membre_form.prenom, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.email) }}
            {{ form_widget(membre_form.email, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.mdp.first) }}
            {{ form_widget(membre_form.mdp.first, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.mdp.second) }}
            {{ form_widget(membre_form.mdp.second, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.ville) }}
            {{ form_widget(membre_form.ville, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.pays) }}
            {{ form_widget(membre_form.pays, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="custom-file mt-3 mb-4">
            {{ form_label(membre_form.imageFile, null, {label_attr : {class : 'custom-file-label'}}) }}
            {{ form_widget(membre_form.imageFile, {attr : {class : 'custom-file-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.description) }}
            {{ form_widget(membre_form.description, {attr : {class : 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(membre_form.personnalite) }}
            {{ form_widget(membre_form.personnalite, {attr : {class : 'custom-select'}}) }}
        </div>

        <div class="form-group {% if value_btn == 'modifier' %} d-none {% endif %}">
            {{ form_label(membre_form.role_emploi) }}
            {{ form_widget(membre_form.role_emploi, {attr : {class : 'custom-select'}}) }}
        </div>

        <div class="form-group {% if not is_granted('ROLE_ADMIN') %} d-none {% endif %}">
            {{ form_label(membre_form.statut) }}
            {{ form_widget(membre_form.statut, {attr : {class : 'custom-select'}}) }}
        </div>

        <input type="hidden" name="type_submit" value="{{ value_btn }}">

        <div>
            {{ form_label(membre_form.submit) }}
            {{ form_widget(membre_form.submit, {attr : {class : 'btn btn-primary m-2'} }) }}
        </div>

    {{ form_end(membre_form) }}
    </div>
{% endblock %}