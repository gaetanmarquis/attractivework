{% extends 'base.html.twig' %}

{% block title %}Hello LikeController!{% endblock %}

{% block stylesheets %}
    {{  parent() }}
    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">
{% endblock %}


{% block body %}
    {{ form(like_form) }}
{% endblock %}

{% block javascripts %}
