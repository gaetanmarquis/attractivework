    <script src="{{ asset('js/autocompleter_jqueryui.js') }}"></script>
    <script>
        $('#like_candidat').autocompleter({
            url_list: '/search/candidat',
            url_get: '/get/candidat'
        });
        $('#like_recruteur').autocompleter({
            url_list: '/search/recruteur',
            url_get: '/get/recruteur'
        });
    </script>
